@model BudgetManagementApp.ViewModels.ReportEditVM

@{
    ViewBag.Title = "Edit";
}

<p class="h3">Reports</p>
<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Name,
                         new { htmlAttributes = new { @class = "form-control", @type = "name", @id = "floatingname", @placeholder = "Johnny" } })
                <label for="floatingname">Name</label>
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="form-floating mb-3 col-md-5">
                @Html.EditorFor(model => model.Description,
                         new { htmlAttributes = new { @class = "form-control", @type = "description", @id = "floatingdescription", @placeholder = "Lorem ipsum" } })
                <label for="floatingdescription">Description</label>
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Edit" class="btn btn-outline-primary mb-3 mt-2" />

            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Back to List", "List")
</div>