@model BudgetManagementApp.ViewModels.RoleEditVM

@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>
@using (Html.BeginForm())

{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />

        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Name,
                         new { htmlAttributes = new { @class = "form-control", @type = "name", @id = "floatingname", @placeholder = "Johnny" } })
                <label for="floatingname">Name</label>
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Create" class="btn btn-outline-primary mb-3 mt-2" />
            </div>
        </div>

    </div>
}

<div>

    @Html.ActionLink("Back to List", "List")

</div>
