@model BudgetManagementApp.ViewModels.FinanceGoalEditVM

@{
    ViewBag.Title = "Edit";
}

<p class="h3">Finance Goals</p>
<h2>Edit</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">

        @Html.LabelFor(model => model.BudgetId, new { @class = "control-label col-md-2" })

        <div class="col-md-3 mb-3">
            @Html.DropDownListFor(model => model.BudgetId, Model.BudgetsList, "Choose a budget",
                     new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BudgetId)
        </div>
    </div>

    <div class="form-group">
        <div class="form-floating mb-3 col-md-3">
            @Html.EditorFor(model => model.Amount,
                     new { htmlAttributes = new { @class = "form-control", @type = "amount", @id = "floatingamount", @placeholder = "333" } })
            <label for="floatingname">Amount</label>
            @Html.ValidationMessageFor(model => model.Amount)
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(model => model.UserId, new { @class = "control-label col-md-2" })

        <div class="col-md-3 mb-3">
            @Html.DropDownListFor(model => model.UserId, Model.UsersList, "Choose a user",
                     new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserId)
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Edit" class="btn btn-outline-primary mb-3 mt-2" />

        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "List")
</div>