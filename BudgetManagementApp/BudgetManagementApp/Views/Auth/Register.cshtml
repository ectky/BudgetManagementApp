@using BudgetManagementApp.Controllers
@model BudgetManagementApp.ViewModels.RegisterVM
@{
    ViewBag.Title = "Register";
}
<h2>Register</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group d-flex justify-content-center">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.FirstName,
                         new { htmlAttributes = new { @class = "form-control", @type = "firstname", @id = "floatingfirstname", @placeholder = "Jon" } })
                <label for="floatingfirstname">First Name</label>
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.LastName,
                         new { htmlAttributes = new { @class = "form-control", @type = "lastname", @id = "floatinglastname", @placeholder = "Doe" } })
                <label for="floatinguser">Last Name</label>
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Username,
                         new { htmlAttributes = new { @class = "form-control", @type = "username", @id = "floatinguser", @placeholder = "admin" } })
                <label for="floatinguser">Username</label>
                @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="form-floating mb-3 col-md-3">
                @Html.EditorFor(model => model.Password,
                         new { htmlAttributes = new { @class = "form-control", @type = "password", @id = "floatingpassword", @placeholder = "qwerty" } })
                <label for="floatingpassword">Password</label>
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group d-flex justify-content-center">
            <div class="col-md-offset-2 col-md-10 d-flex justify-content-center">
                <input type="submit" value="Register" class="btn btn-outline-primary mb-3 mt-2" />
            </div>
        </div>

    </div>

}