@model IEnumerable<BudgetManagementApp.ViewModels.BudgetAmountDetailsVM>

@{
    ViewBag.Title = "Budget Amounts";
}

<p class="h2 text-light">Budget Amounts</p>
@Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-outline-primary mb-3 mt-2" })
<table class="table table-dark table-striped">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", null, new { id = item.Id },
                         htmlAttributes: new { @class = "btn btn-outline-warning btn-sm" })
                @Html.ActionLink("Details", "Details", null, new { id = item.Id },
                         htmlAttributes: new { @class = "btn btn-outline-success btn-sm" })
                @Html.ActionLink("Delete", "Delete", null, new { id = item.Id },
                         htmlAttributes: new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
    }
</table>